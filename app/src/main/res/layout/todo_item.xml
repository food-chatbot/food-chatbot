<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todoCardView"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginBottom="14dp"
    app:cardBackgroundColor="@color/white"

    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/layoutTodoItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDiaryCheckTodo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/todo_checkbutton"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tVDiaryTodo"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="8"
            android:text="투두 내용"
            android:textSize="14sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/eTDiaryTodoEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="8"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDiaryEditTodoComplition"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.3"
            android:text="확인"
            android:textSize="10sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDiaryEditTodo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/todo_edit"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnDiaryDeleteTodo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/todo_delete"
            android:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>